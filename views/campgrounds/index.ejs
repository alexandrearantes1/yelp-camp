<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>

<h1 class="mt-3 mb-3">Campgrounds</h1>
<div class="campgrounds">
<% for (let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <a href="/campgrounds/<%= campground._id %>" class="">
                    <% if (campground.images.length) { %> 
                        <img class="img-fluid" src="<%= campground.images[0].large_thumbnail %>" alt="">
                    <% } else { %> 
                        <img class="img-fluid" src="" alt="">
                    <% } %> 
                </a>
                </div>
                
                <div class="col-md-8 pt-3">
                    <h5 class="card-title"><a href="/campgrounds/<%= campground._id %>"><%= campground.title %></a></h5>
                    <p class="card-text"><a href="/campgrounds/<%= campground._id %>"><%= campground.description %></a></p>
                    <p class="card-text">
                        <small class="text-muted"><%= campground.location %></small>
                    </p>
                    Reviews <%= campground.averageReviewValue %>
                </div>
            </div>
        </div>
    <% } %>
</div>
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %> }
  </script>
<script src="/javascripts/clusterMap.js"></script>